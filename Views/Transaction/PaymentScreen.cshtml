@model Bank2.Models.SharedData
@{
	ViewData["Title"] = "Payment";
}
<head>
	<link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
</head>
<body class="dashboardContentBody">
	<section class="baseSection">
		<form asp-controller="Transaction" asp-action="Pay">
			<div class="bankCard">
				<div class="twoColumn">
					<label>Select Account</label>
					<select class="selectFieldDropdown" asp-for="fromAccount" asp-items=ViewBag.Accounts></select>
				</div>
				<div class="twoColumn">
					<label>Send Payment to A/C : 
						<span class="displayError" asp-validation-for="toAccount"> </span>
					</label>
					<input required class="textInput" type="text" asp-for="toAccount" />
					
				</div>
				<div class="twoColumn">
					<label>Amount
						<span class="displayError" asp-validation-for="amount"> </span>
					</label>
					<input class="textInput" min="0" value="0" step="0.01" type="number" asp-for="amount" />
				</div>
				<div class="twoColumn">
					<label>Payment Desctiption</label>
					<input class="textInput" max="30" type="text" asp-for="description" />
				</div>
				<input class="buttonSquare" type="submit" value="Pay" />
			</div>
		</form>
	</section>
</body>
